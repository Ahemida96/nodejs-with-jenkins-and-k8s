# Create a pipeline job to build and push image from dockerfile in the repository
pipeline {
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    def dockerImage = docker.build("ahemida96/job-portal:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}