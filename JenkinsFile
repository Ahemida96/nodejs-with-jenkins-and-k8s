pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build Ahemida96/job-portal:${env.BUILD_NUMBER} ."
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                    sh "docker push Ahemida96/job-portal:${env.BUILD_NUMBER}"
                }
            }
        }
    }
}
